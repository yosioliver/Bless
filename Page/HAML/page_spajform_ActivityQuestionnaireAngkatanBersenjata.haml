			%label.RadioButton{ :for => "RadioButtonRiskActivityAbroadMissionYes" } Ya
			%div.Separator
			%input#RadioButtonRiskActivityAbroadMissionNo{ :type => "radio", :name => "RadioButtonRiskActivityAbroadMission", :value => "false" }
