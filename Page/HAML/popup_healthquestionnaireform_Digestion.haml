%form#PopUpDigestion.PopUp

	%header
		%input#ButtonCancel.ButtonPrimary.PositionerLeft{ :type => "button", :value => "Cancel" }
		%input#ButtonDone.ButtonPrimary.PositionerRight{ :type => "button", :value => "Done" }
		%h2 KUESIONER GANGGUAN PENCERNAAN							

	/ MAIN

	%fieldset
		%form#HealthQuestionnaireMain
			%div.ContainerFit
				%span.Multi.Single.6e Gangguan fungsi/sistem Pencernaan & Organ dalam Perut/Lambung, Maag, Hernia,Hepatitis dan lainnya?
			%br
			%hr
			%div.ContainerFit
				%label.medium.Single.Item 1. Jelaskan gangguan pencernaan yang pernah dialami?
			%br

			%div.RadioButton.PositionerLeft
				%input#RadioButtonPolicyHolderDigestTukakLambung.Single{ :type => "radio", :name => "RadioButtonPolicyHolderDigest", :value => "tukaklambung" }
				%label.RadioButton{ :for => "RadioButtonPolicyHolderDigestTukakLambung" } tukak lambung
				%div.Separator
				%input#RadioButtonPolicyHolderDigestRadangUsus.Medium.Single{ :type => "radio", :name => "RadioButtonPolicyHolderDigest", :value => "radangusus" }
				%label.RadioButton{ :for => "RadioButtonPolicyHolderDigestRadangUsus" } radang usus
				%div.Separator
				%input#RadioButtonPolicyHolderDigestTukakUsus.Medium.Single{ :type => "radio", :name => "RadioButtonPolicyHolderDigest", :value => "tukakusus" }
				%label.RadioButton{ :for => "RadioButtonPolicyHolderDigestTukakUsus" } tukak usus
				%div.Separator
				%input#RadioButtonPolicyHolderDigestMaag.Medium.Single{ :type => "radio", :name =>"RadioButtonPolicyHolderDigest", :value => "maag" }
				%label.RadioButton{ :for => "RadioButtonPolicyHolderDigestMaag" } maag
				%div.Separator
				%input#RadioButtonPolicyHolderDigestRadangUsus12Jari.Medium.Single{ :type => "radio", :name =>"RadioButtonPolicyHolderDigest", :value => "RadangUsus12Jari" }
				%label.RadioButton{ :for => "RadioButtonPolicyHolderDigestRadangUsus12Jari" } radang usus 12 jari
				%div.Separator
				%input#RadioButtonPolicyHolderDigestOther{ :type => "radio", :name =>"RadioButtonPolicyHolderDigest", :value => "other" }
				%label.RadioButton{ :for => "RadioButtonPolicyHolderDigestOther" } lainnya
			%br
				%input#TextPolicyHolderDigestOther.Full.Single.Item1.Margin{ :type =>"text" }

			%hr
			%div.ContainerFit					
				%label#LabelPolicyHolderDigestSinceStarted.Long.Single.Item3.Margin 2. Sejak kapan mengalami gangguan pencernaan?
				%input#DatePolicyHolderDigestSinceStarted.Short.Single.Item1.Margin{ :type => "text", "data-field" => "date" }						

