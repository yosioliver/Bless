				// SECTION GENERAL				
				boxGenerator("#TextActivityFlightFullName", 24, boxTypeWithoutLabel, null);				
				boxGenerator("#DateActivityFlightBirthdayDay", 2, boxTypeWithoutLabel, null);
				boxGenerator("#DateActivityFlightBirthdayMonth", 2, boxTypeWithoutLabel, null);
