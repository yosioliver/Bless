				boxGenerator("#DateActivityFlightTumorSignedDay", 2, boxTypeWithoutLabel, null);
				boxGenerator("#DateActivityFlightTumorSignedMonth", 2, boxTypeWithoutLabel, null);
				boxGenerator("#DateActivityFlightTumorSignedYear", 4, boxTypeWithoutLabel, null);		
				
				boxGenerator("#TextAgentName", 16, boxTypeWithoutLabel, null);
				boxGenerator("#TextAgentCode", 11, boxTypeWithoutLabel, null);
				boxGenerator("#TextProductCode", 11, boxTypeWithoutLabel, null);
			});


